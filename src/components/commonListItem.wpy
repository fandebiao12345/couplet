    }
  }
  .left{
    display: flex;
    .avatar{
      border-radius: 50%;
      width: 102rpx;
      height: 102rpx;
      margin-right: 16rpx;
    }
    .userInfo{
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      .name{
        font-size: @smallfontsize;
        height: 34rpx;
        line-height: 34rpx;
      }
      .date{
        font-size: @middlefontsize;
        height: 45rpx;
